<UserControl x:Class="WarehouseSystem.Views.View_StartScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WarehouseSystem.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="3" Content="{Binding TextOnClick}" Height="auto"/>
        <Button Grid.Row="0" Content="Mobile" Command="{Binding Click_Mobile}"/>
        <Button Grid.Row="1" Content="Home" Command="{Binding Click_Home}"/>
        <Button Grid.Row="2" Content="Administration" Command="{Binding Click_Admin}"/>
    </Grid>
</UserControl>
